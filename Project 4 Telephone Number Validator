// This project was completed combining research and the assistance of ChatGPT AI in order get a better understanding 

function telephoneCheck(str) {
  // Define a regular expression pattern for valid US phone numbers
  var phoneRegex = /^(1\s?)?(\(\d{3}\)|\d{3})([\s\-]?)\d{3}([\s\-]?)\d{4}$/;
  
  // Use the test() method to check if the string matches the pattern
  return phoneRegex.test(str);
}



telephoneCheck("555-555-5555");
